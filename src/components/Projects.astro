---
const projects = [
  {
    title: "NASA Space Apps Challenge Orrery",
    description: "Orrery interactivo para la NASA Space Apps Challenge, ganador por diseño",
    tech: ["Three.js", "JavaScript", "HTML5", "CSS3", "WebGL"],
    image: "/projects/orrery.jpg",
    link: "https://space-turtles-orrery.vercel.app/"
  },
  {
    title: "Taller de Cerámica",
    description: "Sitio web para un taller de cerámica con catálogo de productos y información",
    tech: ["React", "Next.js", "Tailwind CSS", "JavaScript"],
    image: "/projects/ceramica.jpg",
    link: "https://vpotterypalermo.vercel.app/"
  },
  {
    title: "Single Neuron Neural Network Trainer",
    description: "Aplicación educativa para entrenar y visualizar el funcionamiento de una neurona artificial",
    tech: ["Python", "Flask", "NumPy", "Matplotlib", "HTML", "CSS", "JavaScript"],
    image: "/projects/neural-network.jpg",
    link: "https://github.com/ANDFS2411x/Single-Neuron-Neural-Network-Trainer.git"
  },
  {
    title: "Exportadora de Productos Colombianos",
    description: "Sitio web para empresa exportadora de productos nacionales de Colombia",
    tech: ["HTML", "CSS", "JavaScript", "Bootstrap"],
    image: "/projects/exportadora.jpg",
    link: "https://directo-del-caribe.vercel.app/"
  },
  {
    title: "Automated Daily Payment Reporting System",
    description: "Sistema automatizado usando servicios AWS para generar y almacenar informes diarios de pagos",
    tech: ["AWS", "Lambda", "S3", "RDS", "Python", "JavaScript"],
    image: "/projects/aws-reporting.jpg",
    link: "https://github.com/ANDFS2411x/AWS-S3-LAMBDA-RDS-PAGOS-WEBSITE.git"
  }
];
---

<section id="projects" class="py-20 relative">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl md:text-5xl font-bold mb-12 text-center text-[#00FF00] glow">
      Proyectos Destacados
    </h2>

    <div class="grid md:grid-cols-2 gap-8">
      {projects.map((project) => (
        <a 
          href={project.link}
          target="_blank"
          rel="noopener noreferrer"
          class="group relative bg-black/50 border border-[#00FF00]/20 rounded-lg overflow-hidden hover:border-[#00FF00]/40 transition-all duration-300 project-card opacity-0 transform scale-95 translate-y-8 animate-on-scroll"
        >
          <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black/80 z-10"></div>
          
          <div class="relative z-20 p-6">
            <h3 class="text-2xl font-bold mb-3 text-[#00FF00] group-hover:text-[#00FF00] transition-colors">
              {project.title}
            </h3>

            <p class="text-[#00FF00] mb-4">
              {project.description}
            </p>

            <div class="flex flex-wrap gap-2 mb-4">
              {project.tech.map((tech) => (
                <span class="px-3 py-1 bg-[#00FF00]/10 border border-[#00FF00]/20 rounded-full text-sm text-[#00FF00] hover:bg-[#00FF00]/20 transition-all duration-300">
                  {tech}
                </span>
              ))}
            </div>

            <div class="inline-flex items-center gap-2 text-[#00FF00] hover:text-[#00FF00] transition-colors project-link">
              {project.link.includes("github") ? "Ver GitHub" : "Live Demo"}
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </div>
          </div>

          <div class="absolute inset-0 bg-gradient-to-r from-[#00FF00]/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </a>
      ))}
    </div>
  </div>

  <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-[#00FF00]/5 via-transparent to-transparent pointer-events-none"></div>
</section>

<style>
  .project-card {
    position: relative;
    overflow: hidden;
    transition: transform 0.4s ease, box-shadow 0.4s ease;
  }

  .project-card:hover {
    transform: scale(1.02) translateY(-4px);
    box-shadow: 0 0 20px rgba(0, 255, 0, 0.2);
  }

  .project-link {
    position: relative;
    overflow: hidden;
  }

  .project-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: #00FF00;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s ease;
  }

  .project-link:hover::after {
    transform: scaleX(1);
    transform-origin: left;
  }


  .glow {
    text-shadow: 0 0 10px rgba(0, 255, 0, 0.5),
                 0 0 20px rgba(0, 255, 0, 0.3),
                 0 0 30px rgba(0, 255, 0, 0.2);
  }

  /* Scroll animation */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(40px);
    transition: all 0.8s ease-out;
  }

  .animate-on-scroll.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script is:browser>
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add("visible");
        }
      });
    },
    { threshold: 0.1 }
  );

  document.querySelectorAll(".animate-on-scroll").forEach(el => {
    observer.observe(el);
  });
</script>
