---
const skills = [
  {
    category: "Frontend",
    items: [
      { name: "React", level: 90 },
      { name: "JavaScript", level: 95 },
      { name: "HTML/CSS", level: 90 },
      { name: "Astro", level: 85 },
    ]
  },
  {
    category: "Backend",
    items: [
      { name: "Node.js", level: 90 },
      { name: "Python", level: 85 },
      { name: "C++", level: 80 },
    ]
  },
  {
    category: "Cloud & DevOps",
    items: [
      { name: "Google Cloud", level: 85 },
      { name: "AWS", level: 80 },
      { name: "NGINX", level: 85 },
      { name: "Ubuntu", level: 90 },
    ]
  },
  {
    category: "Bases de Datos",
    items: [
      { name: "SQL", level: 85 },
      { name: "MongoDB", level: 80 },
      { name: "Firebase", level: 85 },
    ]
  }
];
---

<section id="skills" class="py-20 relative">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl md:text-5xl font-bold mb-12 text-center text-[#00FF00] glow animate-pulse-slow">Habilidades TÃ©cnicas</h2>
    
    <div class="grid md:grid-cols-2 gap-8">
      {skills.map((category, index) => (
        <div class="bg-black/50 border border-[#00FF00]/20 rounded-lg p-6 backdrop-blur-sm hover:border-[#00FF00]/40 transition-all duration-300 skill-card" style={`animation-delay: ${index * 0.2}s`}>
          <h3 class="text-2xl font-bold mb-6 text-[#00FF00]">{category.category}</h3>
          <div class="space-y-4">
            {category.items.map((skill, skillIndex) => (
              <div class="space-y-2 skill-item" style={`animation-delay: ${index * 0.2 + skillIndex * 0.1}s`}>
                <div class="flex justify-between items-center">
                  <span class="text-[#00FF00]">{skill.name}</span>
                  <span class="text-[#00FF00]">{skill.level}%</span>
                </div>
                <div class="h-2 bg-[#00FF00]/10 rounded-full overflow-hidden">
                  <div 
                    class="h-full bg-[#00FF00] rounded-full transition-all duration-1000 ease-out skill-bar"
                    style={`width: ${skill.level}%`}
                  ></div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>

  <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-[#00FF00]/5 via-transparent to-transparent pointer-events-none"></div>

  <!-- Floating code elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="floating-code code-1">{}</div>
    <div class="floating-code code-2">function()</div>
    <div class="floating-code code-3">&lt;/&gt;</div>
  </div>
</section>

<style>
  .skill-card {
    animation: fade-in-up 0.8s ease-out forwards;
    opacity: 0;
    transform: translateY(20px);
  }

  .skill-item {
    animation: fade-in 0.5s ease-out forwards, bounce-in 0.6s ease-out forwards;
    opacity: 0;
    transform: scaleX(0);
  }

  @keyframes bounce-in {
    0% { transform: scaleX(0); }
    60% { transform: scaleX(1.1); }
    100% { transform: scaleX(1); }
  }

  .skill-bar {
    position: relative;
    overflow: hidden;
  }

  .skill-bar::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(90deg, transparent, rgba(0, 255, 0, 0.2), transparent);
    animation: shimmer 2s infinite;
  }

  @keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }

  @keyframes fade-in-up {
    0% { opacity: 0; transform: translateY(20px); }
    100% { opacity: 1; transform: translateY(0); }
  }

  @keyframes fade-in {
    0% { opacity: 0; }
    100% { opacity: 1; }
  }

  @keyframes pulse-slow {
    0%, 100% { text-shadow: 0 0 10px rgba(0, 255, 0, 0.5), 0 0 20px rgba(0, 255, 0, 0.3), 0 0 30px rgba(0, 255, 0, 0.2); }
    50% { text-shadow: 0 0 15px rgba(0, 255, 0, 0.7), 0 0 25px rgba(0, 255, 0, 0.5), 0 0 35px rgba(0, 255, 0, 0.3); }
  }

  .animate-pulse-slow {
    animation: pulse-slow 4s ease-in-out infinite;
  }

  .glow {
    text-shadow: 0 0 10px rgba(0, 255, 0, 0.5),
                 0 0 20px rgba(0, 255, 0, 0.3),
                 0 0 30px rgba(0, 255, 0, 0.2);
  }

  .floating-code {
    position: absolute;
    color: rgba(0, 255, 0, 0.3);
    font-family: 'Courier New', Courier, monospace;
    font-size: 1.5rem;
    font-weight: bold;
    opacity: 0.5;
    pointer-events: none;
  }

  .code-1 {
    top: 15%;
    left: 10%;
    animation: float-code 15s ease-in-out infinite;
  }

  .code-2 {
    top: 25%;
    right: 15%;
    animation: float-code 18s ease-in-out infinite;
    animation-delay: 2s;
  }

  .code-3 {
    bottom: 20%;
    left: 20%;
    animation: float-code 20s ease-in-out infinite;
    animation-delay: 4s;
  }

  @keyframes float-code {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    25% { transform: translate(20px, -20px) rotate(5deg); }
    50% { transform: translate(0, -40px) rotate(0deg); }
    75% { transform: translate(-20px, -20px) rotate(-5deg); }
  }
</style>
